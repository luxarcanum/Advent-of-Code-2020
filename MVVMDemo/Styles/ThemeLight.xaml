<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Base Colours -->
    <SolidColorBrush x:Key="Background" Color="#FFFFFF" />

    <SolidColorBrush x:Key="ContainerPrimary" Color="#FFFFFF" />
    <SolidColorBrush x:Key="ContainerSecondary" Color="#FFFFFF" />
    <!--- 8% primary on Container Primary -->
    <SolidColorBrush x:Key="PrimaryLighter" Color="#009688" />
    <SolidColorBrush x:Key="PrimaryColour" Color="#00796B" />
    <SolidColorBrush x:Key="PrimaryDarker" Color="#004D40" />
    <SolidColorBrush x:Key="SecondaryColour" Color="#3700B3" />
    <SolidColorBrush x:Key="ErrorColour" Color="#B00020" />
    <SolidColorBrush x:Key="FontPrimary" Color="#000000" />
    <SolidColorBrush x:Key="FontDisabled" Color="#757575" />
    <SolidColorBrush x:Key="Obnoxious" Color="Orange" />

    <SolidColorBrush x:Key="MenuBack" Color="#00796B" />
    <SolidColorBrush x:Key="MenuFont" Color="#000000" />

</ResourceDictionary>
